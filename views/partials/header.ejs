<header class="py-6 px-4 sm:px-10">
    <div class="flex items-center">
        <!-- 로고 (SVG) -->
        <svg class="h-8 w-auto <%= theme.logoColor %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= theme.logoSvgPath %>" />
        </svg>
        <span class="ml-2 text-xl font-semibold <%= theme.logoTextColor %>"><%= page.logoText %></span>
    </div>
</header>
