<header class="py-6 px-4 sm:px-10 w-full max-w-lg mx-auto">
    <a href="/" class="flex items-center">
        <!-- 1. 로고 이미지 -->
        <img 
          src="<%= page.logoPathName %>" 
          alt="<%= page.domainName %> Logo" 
          class="h-8 w-auto"
          onerror="this.style.display='none'"
        >
        <!-- 2. 로고 텍스트 -->
        <span 
          class="ml-2 text-xl font-semibold"
          style="color: <%= theme.titleColor %>;"
        >
          <%= page.logoText %>
        </span>
    </a>
</header>