<!-- 
  이 푸터는 이제 landingPage.ejs의 <main> 바로 아래에 붙게 됩니다. 
  (화면 맨 아래가 아님)
-->
<footer class="w-full max-w-lg mx-auto p-4 pb-10">
    <form 
        id="notify-form" 
        class="flex flex-col sm:flex-row gap-2"
        data-page-id="<%= page.domainName %>"
    >
        <label for="email-input" class="sr-only">이메일 주소</label>
        <input 
            type="email" 
            id="email-input"
            placeholder="your@email.com"
            class="flex-1 px-4 py-3 rounded-md shadow-sm bg-white border border-gray-500/30 text-gray-900 focus:outline-none focus:ring-2 focus:ring-<%= theme.colorName %>-400"
            required
        >
        
        <button 
            type="submit" 
            id="notify-button"
            class="px-6 py-3 rounded-md shadow-lg font-semibold text-white bg-<%= theme.colorName %>-600 hover:bg-<%= theme.colorName %>-700 focus:outline-none focus:ring-2 focus:ring-<%= theme.colorName %>-400 focus:ring-offset-2 focus:ring-offset-gray-900 transition duration-150 ease-in-out disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap"
            disabled
        >
            알림 받기
        </button>
    </form>

    <!-- 메시지 영역 -->
    <div id="message-area" class="text-center h-5 mt-2">
        <!-- JS가 여기에 메시지를 삽입합니다 -->
    </div>
</footer>

